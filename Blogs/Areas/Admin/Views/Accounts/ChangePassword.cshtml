@model Blogs.Areas.Admin.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item" aria-current="page">Thay đổi mật khẩu</li>
    </ol>
    <h6 class="slim-pagetitle">CHỈNH SỬA QUYỀN TRUY CẬP</h6>
</div><!-- slim-pageheader -->
<form asp-area="Admin" asp-controller="Accounts" asp-action="ChangePassword" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-layout">
        <div class="row mg-b-25">
            <div class="col-lg-4">
                <div class="form-group">
                    <input asp-for="PasswordNow" class="form-control" placeholder="Mật khẩu hiện tại" type="password" />
                    <span asp-validation-for="PasswordNow" class="text-danger"></span>
                </div>
            </div><!-- col-4 -->
            <div class="col-lg-4">
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Mật khẩu mới" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div><!-- col-4 -->
            <div class="col-lg-4">
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mói" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div><!-- col-4 -->
        </div>
        <div class="form-layout-footer">
            <button class="btn btn-primary bd-0">Submit Form</button>
            <button class="btn btn-secondary bd-0">Cancel</button>
        </div><!-- form-layout-footer -->
    </div><!-- form-layout -->
</form>


