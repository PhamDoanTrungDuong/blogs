@model Blogs.Models.Post

@{
    ViewData["Title"] = "CHỈNH SỬA";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <link src="/AdminAssets/lib/select2/css/select2.min.css">
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">QUẢN LÝ BÀI VIẾT</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Create">CHỈNH SỬA BÀI VIẾT</a></li>
    </ol>
    <h6 class="slim-pagetitle">CHỈNH SỬA BÀI VIẾT</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <form asp-area="Admin" asp-controller="Posts" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="PostId"/>
        <input type="hidden" asp-for="CreateDate"/>
        <input type="hidden" asp-for="Author"/>
        <input type="hidden" asp-for="AccountId"/>
        <input type="hidden" asp-for="Thumb"/>
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">TIÊU ĐỀ: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Title">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">MIÊU TẢ NGẮ: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" maxlength="254" asp-for="Scontents">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">DANH MỤC CHA: <span class="tx-danger">*</span></label>
                        <select class="form-control selecte2" asp-for="CatId" asp-items="@ViewBag.DanhMuc" required>
                            <option value="0"> DANH MỤC</option>
                        </select>
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label">ẢNH ĐẠI DIỆN: <span class="tx-danger">*</span></label>
                        <input class="form-control-file" name="fthumb" type="file" asp-for="Thumb">
                    </div>
                </div><!-- col-4 -->
            </div><!-- row -->

            <hr />
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">TAGS: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Tags">
                    </div>
                </div><!-- col-4 -->
            </div>

            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">MÔ TẢ: <span class="tx-danger">*</span></label>
                        <input class="form-control" asp-for="Contents">
                    </div>
                </div><!-- col-4 -->
            </div>

            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                    <input type="checkbox" asp-for="Published"><span> Published</span>
                </div>
            </div><!-- col-4 -->
            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                    <input type="checkbox" asp-for="IsHost"><span> IsHost</span>
                </div>
            </div><!-- col-4 -->
            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                    <input type="checkbox" asp-for="IsNewfeed"><span> IsNewfeed</span>
                </div>
            </div><!-- col-4 -->

            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">CẬP NHẬT</button>
                <button class="btn btn-secondary bd-0">Cancel</button>
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="/AdminAssets/lib/select2/js/select2.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('#Contents').summernote({
                fontName: ['Arial'],
                styleTags: ['p', 'h1', 'h2'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}

