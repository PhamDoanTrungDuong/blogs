@model Blogs.Models.Category

@{
    ViewData["Title"] = "TẠO MỚI DANH MỤC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">QUẢN LÝ QUYÊN TRUY CẬP</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Create">TẠO MỚI DANH MỤC</a></li>
    </ol>
    <h6 class="slim-pagetitle">TẠO MỚI DANH MỤC</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <form asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">TÊN DANH MỤC: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="CatName">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">DANH MỤC CHA: <span class="tx-danger">*</span></label>
                        <select class="form-control selecte2" asp-for="Parents" asp-items="@ViewBag.DanhMucGoc" required>
                            >
                            <option value="0" selected> DANH MỤC GỐC</option>
                        </select>
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">SẮP XẾP: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="number" value="0" asp-for="Ordering">
                    </div>
                </div><!-- col-4 -->
            </div><!-- row -->
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">MÔ TẢ: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Description">
                    </div>
                </div><!-- col-4 -->
            </div>
            <div class="row mg-b-25">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label">ẢNH ĐẠI DIỆN: <span class="tx-danger">*</span></label>
                        <input class="form-control-file" name="fthumb" type="file" asp-for="Thumb">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group">
                        COVER: <span class="tx-danger">*</span>
                        <input class="form-control-file" name="fcover" type="file" asp-for="Cover">
                    </div>
                </div><!-- col-4 -->
            </div><!-- row -->
            <div class="row mg-b-25">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label">ICON: <span class="tx-danger">*</span></label>
                        <input class="form-control-file" name="ficon" type="file" asp-for="Icon">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>TRẠNG THÁI</label>
                        <br />
                        <input type="checkbox" asp-for="Published">
                    </div>
                </div><!-- col-4 -->
            </div><!-- row -->
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">TIÊU ĐỀ: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Alias">
                    </div>
                </div><!-- col-4 -->
            </div>
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">MetaKey: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="MetaKey">
                    </div>
                </div><!-- col-4 -->
            </div>
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">MetaDesc: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="MetaDesc">
                    </div>
                </div><!-- col-4 -->
            </div>
            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">Submit Form</button>
                <button class="btn btn-secondary bd-0">Cancel</button>
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->
